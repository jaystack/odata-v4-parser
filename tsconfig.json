{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es2017",
      "sourceMap": true,
      "outDir": "./dist",
      "forceConsistentCasingInFileNames": true,
      "strictFunctionTypes": true,
      "esModuleInterop": true
    },
    "exclude": ["node_modules", "dist"]
  }
